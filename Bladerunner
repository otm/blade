
function target.release(version, name, description)
	if version == nil then
		print("fatal: no version specified")
		return
	end

	_name = string.format("blade %s", version)
	_description = string.format("blade %s", version)
	name = name or _name
	description = description or _description


	if not string.match(version, "^v%d[.]%d[.]%d$") then
		print("fatal: version must be on the form 'vX.X.X'")
		return
	end

	exitCode, output = blade._exec('git status --porcelain')
	if output ~= "" then
		print("fatal: uncommited changes")
		return
	end

	target.build()
	blade.sh('git tag ' .. version)
	blade.sh('git push --tags')

	runner.sh(string.format("github-release release --user otm --repo blade --tag %s --name '%s' --description '%s'", version, name, description))

	code, out = blade.system("ls -1 blade_*")
	for file in out:gmatch"(.-)\n" do
		code = runner.system(string.format("github-release upload --user otm --repo blade --tag %s --name %s --file %s", version, file, file))
		blade.printStatus(file, code)
	end
end

blade.help(target.release, "<version> [name] [description]")


function target.clean()
	blade.sh("rm blade_*")
end

function target.build()
	blade.sh("gox")
end
